<div class="header">
  <div class="clear"></div>
  <div class="sub-header">
    <div class="logo">
      <%= link_to image_tag("logo2.png"), root_path %>
    </div>
    <div class="sub-header-center">
      <form>
        <input type="text"><input type="submit"  value="search" />
      </form>
    </div>
    <div class="sub-header-right">
      <% if logged_in? %>
        <li><%= link_to t(".user"), "#" %></li>
        <li class="dropdown">
          <%= link_to t("=.account"), "#", class: "dropdown-toggle",
            data: {toggle: "dropdown"} %>
          <ul class="dropdown-menu">
            <li><%= link_to t("=.profile"), current_user %></li>
            <li><%= link_to t("=.settings"), "#" %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t(".logout"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
      <% else %>
        <ul class="unlog-in">
          <li><%= link_to t("login"), login_path %></li>
          <li><%= link_to t("signup"), signup_path %></li>
        </ul>
      <% end %>
    </div>
    <div class="clear"></div>
  </div>
  <div class="clear"> </div>
  <div class="top-nav">
    <ul>
      <li class="active1"><%= link_to t("home"), root_path %></li></li>
      <li><%= link_to t("favorite"), "#" %></li></li>
      <li><%= link_to t("album"), "#" %></li>
      <li><%= link_to t("artist"), "#" %></li></li>
      <li><%= link_to t("chart"), "#" %></li></li>
      <div class="clear"></div>
    </ul>
  </div>
</div>

<% provide :title, t("signup") %>
<h1><%= t "signup" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "shared/error_messages", user: @user %>

    <%= form_for(@user) do |f2| %>
      <%= f2.fields_for :profile do |f| %>
        *<%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>

        *<%= f.label :date_of_birth %>
        <%= f.date_field :date_of_birth, class: "form-control" %>

        <%= f.label :address %>
        <%= f.text_field :address, class: "form-control" %>

        <%= f.label :description %>
        <%= f.text_field :description, class: "form-control" %>

        *<%= f.label :gender %></br>
        <%= f.label :gender, "Male", value: true %>
        <%= f.radio_button :gender, true %>
        <%= f.label :gender, "Female", value: false %>
        <%= f.radio_button :gender, false %>
      <% end %>
      *<%= f2.label :email %>
      <%= f2.email_field :email, class: "form-control" %>

      *<%= f2.label :password %>
      <%= f2.password_field :password, class: "form-control" %>

      *<%= f2.label :password_confirmation, t(".confirmation") %>
      <%= f2.password_field :password_confirmation, class: "form-control" %>

      <%= f2.submit t(".create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
